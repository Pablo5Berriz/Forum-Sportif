@model Forum_rufine_et_paul.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Suppression de catégorie</h1>

<h3>Etes-vous certain de vouloir effacer cette categorie?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatName)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatDesc)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatImg)
        </dd>
        <dt class = "col-sm-2">
            Statut
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatActif)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="m-2">
        <input type="hidden" asp-for="CatPk" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">retour</a>
    </form>
</div>

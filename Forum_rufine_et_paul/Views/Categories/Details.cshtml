@model Forum_rufine_et_paul.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Détails de la Categorie</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatName)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatDesc)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatImg)
        </dd>
        <dt class = "col-sm-2">
            Discontinuite
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CatActif)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CatPk" class="btn btn-danger">Mettre à jour</a> |
    <a asp-action="Index" class="btn btn-danger">Retour</a>
</div>
